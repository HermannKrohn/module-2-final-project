<h1><%=@user.first_name%> <%=@user.last_name%>'s Dashboard</h1>
<hr>
<br>

<div>
    <a href="/recipes/new"><button>Create New Recipe</button></a>
    <form method="POST" action="/search-user">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="text" name="user[username]" placeholder="Search User">
    <form>
</div>

<br>

<div>
    <h3>Your Recipes:</h3>
    <ul>
        <%@user.recipes.each do |recipe|%>
            <li><label><strong>Recipe:</strong></label><a href="/recipes/<%=recipe.id%>"><%=recipe.title%></a> <label><strong>Category:</strong></label><%=recipe.category%></li>
        <%end%>
    </ul>
</div>
